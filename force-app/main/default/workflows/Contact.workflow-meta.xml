<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>New_Contact_Email</fullName>
        <description>New Contact Email</description>
        <protected>false</protected>
        <recipients>
            <field>Email</field>
            <type>email</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/New_Contact_Email_Template</template>
    </alerts>
    <rules>
        <fullName>Email Contact</fullName>
        <actions>
            <name>New_Contact_Email</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <description>Sends an email to the contact email when it is created</description>
        <formula>LEN( Email ) &gt; 0</formula>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
