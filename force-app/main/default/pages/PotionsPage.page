<apex:page standardController="Potion__c" recordSetVar="pots" extensions="PotionExtension" lightningStylesheets="true">
    <head>
        <apex:slds />
    </head>

    <body>
        <c:MenuHeader title="Potions Page"/>
        <apex:form >
            

            <apex:pageBlock >
                <apex:pageBlockSection >
            <apex:dataList value="{!pots}" var="pot">
                <apex:panelGrid columns="2">
                    <apex:panelGroup >
                        <!-- <p>Potion Price</p> -->
                        <apex:outputField value="{!pot.Name}" /><br></br>

                        <apex:outputField value="{!pot.Total_Price__c}" />
                    </apex:panelGroup>

                    <apex:commandLink action="{!setId}" value="Add to cart">
                        <apex:param name="p1" assignto="{!addedPot}" value="{!pot.id}" />
                    </apex:commandLink>
                </apex:panelGrid>
            </apex:dataList>
            </apex:pageBlockSection>
            </apex:pageBlock>
        </apex:form>
    </body>
</apex:page>